---
title: "Home"
layout: "layouts/layout-home.njk"
stylesheet: "/_assets/css/stylesheet.css"
fonts: "https://fonts.googleapis.com/css?family=Lato|Source+Code+Pro|Coda+Caption:800|Dancing+Script&display=swap"
---
<el-section id="skills" padding-top="10" padding-bottom="6">
    <el-grid auto-fit="columns" columns="3" gap="3">
        <el-column attr="row">
            <h2>Skills</h2>
        </el-column>
        {%- for skills in collections.skills -%}
        <article class="card-progress {{skills.data.skills}}">
            <label for="skill">
                <h4> {{ skills.data.title }} </h4>
                    <svg>
                        <use href="{{skills.data.svgPath}}"></use>
                    </svg>
            </label>
            <progress name="skill" class="progress" value="{{skills.data.percentage}}" max="100"></progress>
            <p> {{skills.data.description}} </p>
        </article>
        {%- endfor -%}
    </el-grid>
</el-section>

<el-section id="projects" padding-gap="6">
    <el-grid auto-fit="columns" columns="3" gap="3">
        <el-column attr="row">
            <h2>Recent Projects</h2>
        </el-column>
        {%- for recents in collections.recents -%}
        <article class="card-minimal">
            <img src="{{ recents.data.image }}" alt="{{ recents.data.placeholder }}">
            <h3>{{ recents.data.title }}</h3>
            <h4 class="card-tags"><span>{{ recents.data.cathegory }}</span> <span>{{ recents.data.type }}</span></h4>
            <ul>
                <li>
                    <a href="{{ recents.data.livePath }}">
                        <svg> <use href="_assets/media/svg/sprites.svg#earth"></use></svg>
                    </a>live
                </li>
                <li>
                    <a href="{{ recents.data.codePath }}">
                        <svg> <use href="_assets/media/svg/sprites.svg#github"></use> </svg>
                    </a>Code
                </li>
                <li>
                    <a href="{{ recents.data.infoPath }}">
                        <svg><use href="_assets/media/svg/sprites.svg#zoom"></use></svg>
                    </a>Details
                </li>
            </ul>
        </article>
        {%- endfor -%}
    </el-grid>
</el-section>

<el-section id="chanllenge" padding-gap="6">
    <el-grid auto-fit="columns" columns="2" gap="3">
        <el-column attr="row">
            <h2>Code Challenges</h2>
        </el-column>
        {%- for challenges in collections.challenge -%}
        <article class="card-action card-ckecked">
            <div class="card-header">
                <svg width="56" height="56" fill="var(--color-secondary)">
                    <use href="_assets/media/svg/sprites.svg#success"></use>
                </svg>
            </div>
            <div class="card-content">
                <h3>{{ challenges.data.title }}</h3>
            </div>
            <div class="card-footer">
                <p>
                    <b>Started:</b>{{ challenges.data.started }}<br>
                    <b>Ended:</b>{{ challenges.data.ended }}
                </p>
                <el-button>
                    <a slot="button" extended="button" theme="primary"
                        href="https://www.hackerrank.com/andrewric86?hr_r=1"> See Results</a>
                </el-button>
            </div>
        </article>
        {%- endfor -%}
        {%- for challenges in collections.challengeOpen -%}
        <article class="card-action">
            <div class="card-header">
                <svg width="56" height="56" fill="var(--color-light)">
                    <use href="_assets/media/svg/sprites.svg#alert"></use>
                </svg>
            </div>
            <div class="card-content">
                <p>Submit a Code Chanllenge only if you are a:</p>
                <ol>
                    <li>
                        <b> Recruiter </b>looking to hide a developer.
                    </li>
                    <li>
                        <b> Employer</b> who wants to test my skills.
                    </li>
                </ol>
            </div>
            <div class="card-footer">
                <el-button>
                    <a slot="button" extended="button" theme="secondary" href="#open-modal">Submit Challenge </a>
                </el-button>
            </div>
        </article> 
        {%- endfor -%}
    </el-grid>

    <div id="open-modal" class="modal-window">
        <div class="modal-content">
            <a href="#chanllenge" title="Close Modal" class="backdrop-modal"></a>
            <form 
            id="andrewrico-CodeChallegeForm-homePage" 
            name="andrewrico-CodeChallegeForm-homePage"
            class="form-skin form-site"  
            method="POST" 
            data-netlify="true">
                <p>Submit a Code Challenge</p>
                <label for="selection">You are a:</label>
                <select name="selection">
                    <option>Select</option>
                    <option>Recruiter</option>
                    <option>Employer </option>
                </select>
                <label for="name">name</label>
                <input type="text" name="name" placeholder="Name Or Company Name" aria-label="name" />
                <label for="email">email</label>
                <input type="text" name="phone" placeholder="Phone" aria-label="phone" />
                <label for="url">url</label>
                <input type="url" name="url" placeholder="URL" aria-label="url" />
                <label for="message">message</label>
                <textarea name="message" rows="4" placeholder="In a few words, tell me more about the rules"
                    aria-label="message"></textarea><br><br>
                <el-button>
                    <button type="submit" slot="button" extended="button" theme="custom">
                        Submit
                    </button>
                </el-button>
            </form>
        </div>
    </div>
</el-section>

<el-section id="contact" padding-gap=6>
    <el-grid auto-fit="columns" columns="2" gap="3">
        <el-column attr="row">
            <h2>Contact Me</h2>
        </el-column>
        
        <el-column>
            <iframe 
            width="100%" 
            height="100%" 
            frameborder="0" 
            style="border:0;" 
            allowfullscreen=""  
            src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d119613.34798108297!2d-80.2624127479914!3d26.09798276038886!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1574782225997!5m2!1sen!2sus"></iframe>
        </el-column>

        <el-column>
            <h4 style="color:var(--color-quaternary); font-size:1.6rem;">
                Send me a message
                <svg width="32" height="32" fill="var(--color-quaternary)"><use href="/_assets/media/svg/sprites.svg#rocket"></use></svg>
            </h4>
            <form 
            id="andrewrico-SendMessageForm-homePage" 
            name="andrewrico-SendMessageForm-homePage" 
            class="form-skin" 
            method="POST" 
            data-netlify="true">
                <label for="name">name</label>
                <input type="text" name="name" placeholder="Name" aria-label="name" />
                <label for="email">email</label>
                <input type="email" name="email" placeholder="Email" aria-label="email" />
                <label for="phone">phone</label>
                <input type="text" name="phone" placeholder="Phone" aria-label="phone" />
                <label for="message">message</label>
                <textarea name="message" rows="1" placeholder="In a few words, tell me about your inquiry"
                    aria-label="message"></textarea><br><br>
                <el-button class="cubic">
                    <button type="submit" slot="button" extended="button" theme="custom">
                        Send Message
                    </button>
                </el-button>
            </form>
        </el-column>
    </el-grid>
</el-section>