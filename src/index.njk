---
title: "Home"
description: "This is the Homepage"
layout: "layouts/layout-home.njk"
---
<el-section id="skills" padding-top="6" padding-bottom="6">
    <el-grid auto-fit="columns" columns="3" gap="1">
        <el-column attr="row">
            <h2>Skills</h2>
        </el-column>
        {%- for skill in collections.skills -%}
        <el-column>
            <article class="card-progress {{skill.data.skills}}">
                <label for="skill">
                    <h4> {{ skill.data.title }} </h4>
                        <svg>
                            <use href="{{skill.data.svgPath}}"></use>
                        </svg>
                </label>
                <progress name="skill" class="progress" value="{{skill.data.percentage}}" max="100"></progress>
                <p> {{skill.data.description}} </p>
            </article>
        </el-column>
        {%- endfor -%}
    </el-grid>
</el-section>

<el-section id="projects" padding-gap="6">
    <el-grid auto-fit="columns" columns="3" gap="1">
        <el-column attr="row">
            <h2>Recent Projects</h2>
        </el-column>
        {%- for project in collections.projects -%}
        <el-column>
            <article class="card-minimal">
                <img src="{{ project.data.ProjectPathToImage }}" alt="{{ project.data.ProjectImageMeta}}">
                <h3>{{ project.data.title }}</h3>
                <h4 class="card-tags">
                    <span>{{ project.data.ProjectStringCathegory }}</span>
                    <span>{{ project.data.ProjectStringType }}</span>
                </h4>
                <h4 class="card-subtitle">
                    <svg> <use href="/_assets/media/svg/sprites.svg#commmas"></use></svg>
                    {{ project.data.ProjectStringMade }}
                </h4>
                <ul>
                    <li>
                        <a href="{{ project.data.ProjectLinkToDemo }}">
                            <svg> <use href="/_assets/media/svg/sprites.svg#earth"></use></svg>
                        </a> LIVE SITE
                    </li>
                    <li>
                        <a href="{{ project.data.ProjectLinkToCode }}">
                            <svg> <use href="/_assets/media/svg/sprites.svg#github"></use> </svg>
                        </a> SHOW ME THE CODE
                    </li>
                    <li>
                        <a href="{{ project.url | url }}">
                            <svg><use href="/_assets/media/svg/sprites.svg#timeline"></use></svg>
                        </a> CASE STUDY
                    </li>
                </ul>
            </article>
        </el-column>
        {% endfor %}
    </el-grid>
</el-section>

<el-section id="chanllenge" padding-gap="6">
    <el-grid auto-fit="columns" columns="2" gap="1">
        <el-column attr="row">
            <h2>Code Challenges</h2>
        </el-column>
        {%- for challenges in collections.challenge -%}
        <el-column>
            <article class="card-action card-ckecked">
                <div class="card-header">
                    <svg width="56" height="56" fill="var(--color-secondary)">
                        <use href="_assets/media/svg/sprites.svg#success"></use>
                    </svg>
                </div>
                <div class="card-content">
                    <h3>{{ challenges.data.title }}</h3>
                </div>
                <div class="card-footer">
                    <p>
                        <b>Started:</b>{{ challenges.data.started }}<br>
                        <b>Ended:</b>{{ challenges.data.ended }}
                    </p>
                    <el-button class="el-button">
                        <a slot="button" extended="button" theme="primary"
                            href="https://www.hackerrank.com/andrewric86?hr_r=1"> See Results</a>
                    </el-button>
                </div>
            </article>
        </el-column>
        {%- endfor -%}
        {%- for challenges in collections.open -%}
        <el-column>
            <article class="card-action">
                <div class="card-header">
                    <svg width="56" height="56" fill="var(--color-light)">
                        <use href="_assets/media/svg/sprites.svg#alert"></use>
                    </svg>
                </div>
                <div class="card-content">
                    <p>Submit a Code Chanllenge only if you are a:</p>
                    <ol>
                        <li>
                            <b> Recruiter </b>looking to hide a developer.
                        </li>
                        <li>
                            <b> Employer</b> who wants to test my skills.
                        </li>
                    </ol>
                </div>
                <div class="card-footer">
                    <el-button class="el-button">
                        <a slot="button" extended="button" theme="secondary" href="#submit-challenge">Submit </a>
                    </el-button>
                </div>
            </article> 
        </el-column>
        {%- endfor -%}
    </el-grid>
    <div id="submit-challenge" class="modal-popup">
        <div class="modal-content">
            <a href="#chanllenge" title="CLOSE" class="backdrop-modal"></a>
            {% include "forms/form-submitChallenge.njk" %}
        </div>
    </div>
</el-section>

<el-section id="articles" padding-gap="6">
    <el-grid auto-fit="columns" columns="2" gap="1">
        <el-column attr="row">
            <h2>Recent Articles</h2>
        </el-column>
        <el-column attr="row" max-width="768px" center="auto">
            <ul>
                {%- for article in collections.article -%}
                    <li>
                        <article class="card-article">
                            <time datetime="{{ article.date | dateIso }}">{{ article.date | dateReadable }}</time><br><br>
                            <h2> {{ article.data.title }} </h2>
                            {% excerpt article %}
                            <el-button class="el-button">
                                <a slot="button" extended="button" theme="quaternary" href="{{ article.url | url }}">Read more</a>
                            </el-button>
                        </article>
                    </li>
                {% endfor %}
            </ul>
        </el-column>
    </el-grid>
</el-section>

<el-section id="contact" padding-gap="6">

    <el-grid auto-fit="columns" columns="2" gap="1">

        <el-column attr="row">
            <h2>Contact Me</h2>
        </el-column>

        <el-column>
            <iframe 
            width="100%" 
            height="100%" 
            frameborder="0" 
            style="border:0;" 
            allowfullscreen=""  
            src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d119613.34798108297!2d-80.2624127479914!3d26.09798276038886!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1574782225997!5m2!1sen!2sus"></iframe>
        </el-column>

        <el-column>
            {% include "forms/form-sendMessage.njk" %}
        </el-column>

    </el-grid>
    
</el-section>


