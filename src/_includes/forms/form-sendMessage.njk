<div class="netliform simple-form sendMesseage-form">
    <p id="error-message"></p>
    <h3>
       <span class="hiddenByUX"> Form: </span>
        Send me a message
        <svg style="margin:0 16px;" width="48" height="48" fill="var(--color-quaternary)"><use href="/_assets/media/svg/sprites.svg#form-pencil"></use></svg>
    </h3>
    <form 
        id="andrewrico-message-netiId-56" 
        name="andrewrico-message-netiId-56" 
        method="POST"
        action="/" 
        data-netlify="true"
        data-netlify-recaptcha="true"
        >
        <div class="form-field">
                <label for="netiId-56-name">NAME</label>
                <div class="field-group">
                    <svg> <use href="/_assets/media/svg/sprites.svg#user"></use></svg>
                    <input type="text" id="netiId-56-name" name="netiId-56-name" placeholder="jhon due" aria-label="name" required />
                </div>
            </div>

            <div class="form-field">
                <label for="netiId-56-email">E-MAIL</label>
                <div class="field-group">
                    <svg> <use href="/_assets/media/svg/sprites.svg#mail"></use></svg>
                    <input type="email" id="netiId-56-email" name="netiId-56-email" placeholder="jhondue@mail.com" aria-label="email" required />
                </div>
            </div>
            <div class="form-field">
                <label for="netiId-56-phone">PHONE</label>
                <div class="field-group">
                    <svg> <use href="/_assets/media/svg/sprites.svg#phone"></use></svg>
                    <input type="tel" id="netiId-56-phone" name="netiId-56-phone" placeholder="(565)-333-3333" aria-label="tel" required />
                </div>
            </div>
            <div class="form-field fullwidth">
                <label for="netiId-56-message">MESSAGE</label>
                <div class="field-group">
                    <svg> <use href="/_assets/media/svg/sprites.svg#quill"></use></svg>
                    <input type="text" id="netiId-56-message" name="netiId-56-message" placeholder="In a few words, tell me about your inquiry" aria-label="message" required />
                </div>
            </div>
        <el-button class="auto">
            <button type="submit" slot="button" class="el-btn el-btn-5">
                Send Message
            </button>
        </el-button>
    </form>
</div>