                            <option value="Employer">Employer </option>
                            <option value="Prospect">Prospect </option>
                        </select>                    
                    </div>
                </div>

                <div class="form-field">
                    <label for="netliId-57-name">NAME</label>
                    <div class="field-group">
                        <svg><use href="/_assets/media/svg/sprites.svg#user"></use></svg>
                        <input type="text" id="netliId-57-name" name="netliId-57-name" placeholder="jhon due" aria-label="name" required />
                    </div>
                </div>

                <div class="form-field">
                    <label for="netliId-57-phone">PHONE</label>
                    <div class="field-group">
                        <svg> <use href="/_assets/media/svg/sprites.svg#phone"></use></svg>
                        <input type="tel" id="netliId-57-phone" name="netliId-57-phone" placeholder="(555)-333-3333" aria-label="tel" required />
                    </div>
                </div>
                
                <div class="form-field">
                    <label for="netliId-57-email">E-MAIL</label>
                    <div class="field-group">
                        <svg> <use href="/_assets/media/svg/sprites.svg#mail"></use></svg>
