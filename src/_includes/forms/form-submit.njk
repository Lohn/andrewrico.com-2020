                    </div>
                </div>
                <div class="form-field">
                    <label for="netliId-57-url">URL</label>
                    <div class="field-group">
                        <svg> <use href="/_assets/media/svg/sprites.svg#www"></use></svg>
                        <input type="text" id="netliId-57-url" name="netliId-57-url" placeholder="https://www." aria-label="url" required />
                    </div>
                </div>
                <div class="form-field fullwidth">
                    <label for="netliId-57-message">MESSAGE</label>
                    <div class="field-group">
                        <svg> <use href="/_assets/media/svg/sprites.svg#quill"></use></svg>
                        <input type="text" id="netliId-57-message" name="netliId-57-message" placeholder="In a few words, tell me about your inquiry" aria-label="message" required />
                    </div>
                </div>
                <el-button class="auto">
                    <button type="submit" slot="button" class="el-btn el-btn-4">
                        Submit
                    </button>
                </el-button>
            </form>
        </div>
    </div>
