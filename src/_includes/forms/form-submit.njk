<div id="submit-challenge" class="modal-popup">
    <div class="modal-content">
        <a href="#chanllenge" title="CLOSE" class="backdrop-modal"></a>
        <div class="netliform popup-form">
            <h3>
                <span class="hiddenByUX"> Form: </span>
                Submit a Code Challenge        
                <a href="#challenge" title="CLOSE" class="modal-icon-close">X</a>
            </h3>
            <form 
                id="andrewrico-submit-netliId-57" 
                name="andrewrico-submit-netliId-57" 
                method="POST" 
                data-netlify="true"
                >
                <div class="form-field fullwidth">
                    <label for="netliId-57-selection">I'AM A</label>
                    <div class="field-group">
                        <svg> <use href="/_assets/media/svg/sprites.svg#businessman"></use></svg>
                        <select id="netliId-57-selection" name="netliId-57-selection" aria-label="selection"  required>
