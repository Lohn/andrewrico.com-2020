---
layout: "/layouts/layout-article.njk"
---
<el-section>
    <el-grid auto-fit="columns" columns="1" gap="2" template-columns="2fr 1fr"> 
        <el-column>
            <article id="article">
                {% block content  %}
                    {{ content | safe }}
                {% endblock content %}
            </article>
        </el-column>
        <el-column>
            <el-inline id="author-article">
                <img class="author-avatar" src="{{ site.author.avatar}}" alt="{{ site.author.author}} Avatar">
                <span>
                    <h2 class="author-name"> {{ site.author.name}} </h2>   
                    <p> <time datetime="{{ date | dateIso }}">  {{ date | dateReadable }}  </time> </p>  
                </span> 
            </el-inline>
        </el-column>
    </el-grid>
</el-section>