---
title: "Blog"
description: "This is the Blog page"
layout: "/layouts/layout-blog.njk"
PagePathToBanner: "var(--color-banner-shadow), url(/_assets/media/images/abstract-1.jpg)"
keywords:  
    - Javascript
    - Web Components
pagination:
  data: collections.article
  size: 10
  reverse: true
  alias: articles
---
<el-section id="blog-page" padding-gap="10">
    <el-grid pixel-width="768" columns="1">

    <el-column display="flex" flex-direction="column" justify-content="center" align-items="center" >

            <el-inline id="author">
                <img class="author-avatar" src="{{ site.author.avatar}}" alt="{{ site.author.author}} Avatar">
                <h1 class="author-name"> {{ site.author.name}} </h1>
                <div class="author-titles">
                    {% for titles in site.author.title %}
                    <h2 class="author-title"> {{ titles }} </h2> 
                    {% endfor %}
                    {% for subtitles in site.author.subtitle %}
                    <h2 class="author-subtitle"> {{ subtitles }} </h2>
                    {% endfor %}
                </div>                
            </el-inline>

            <nav>
                <ul class="article-keywords">
                    {% for item in keywords %}
                        <li><b>{{ item }}</b></li>
                    {% endfor %}
                </ul>
            </nav>
        </el-column>
        <el-column attr="row">
            <ul>
                {% for article in articles %}
                    <li>
                        <article class="card-article">
                            <time datetime="{{ article.date | dateIso }}">{{ article.date | dateReadable }}</time><br><br>
                            <h2> {{ article.data.title }} </h2>
                            {% excerpt article %}
                            <el-button>
                                <a slot="button" extended="button" theme="quaternary" href="{{ article.url | url }}">Read more</a>
                            </el-button>
                        </article>
                    </li>
                {% endfor %}
            </ul>
        </el-column>
    </el-grid>
</el-section>
<el-section padding-gap="2" background="#fafafa">
    <el-grid pixel-width="768" columns="1">
        <el-column attr="row">
            {% include "forms/form-subscribe.njk" %}
        </el-column>
    </el-grid>
</el-section>


