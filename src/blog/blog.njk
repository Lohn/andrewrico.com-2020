---
title: "Blog"
description: "Blog Page"
layout: "/layouts/layout-blog.njk"
tags: 
- page

changefreq: weekly
priority: 1


PagePathToBanner: "var(--color-banner-shadow), url(/_assets/media/images/abstract-1.jpg)"
keywords:  
    - Javascript
    - Web Components
pagination:
  data: collections.article
  size: 10
  reverse: true
  alias: articles
---
<el-section>
    <el-grid pixel-width="768" columns="1">
        <el-column grid="row" display="flex" flex-direction="column" justify-content="center" align-items="center">
            <div id="author">
                <img class="author-avatar" src="{{ site.author.avatar}}" alt="{{ site.author.author}} Avatar" title="{{ site.author.author}} Avatar">
                <div>
                    <h2 class="author-name"> {{ site.author.name}} </h2>
                    {% for subtitles in site.author.subtitle %}
                        <h2 class="author-title"> {{ subtitles }} </h2>
                    {% endfor %}
                    {% for titles in site.author.title %}
                        <h2 class="author-title"> {{ titles }} </h2> 
                    {% endfor %}
                </div>
            </div>
            <ul class="article-keywords">
                {% for item in keywords %}
                    <li><h4 class="keyword-tags">{{ item }}</h4></li>
                {% endfor %}
            </ul>
        </el-column>
        <el-column grid="row">
            <ul>
                {% for article in articles %}
                    <li>
                        <article class="card-article">
                            <time datetime="{{ article.date | dateIso }}">{{ article.date | dateReadable }}</time><br>
                            <h2> {{ article.data.title }} </h2>
                            <p>{% excerpt article %}</p>
                            <el-button class="auto">
                                <a slot="button" class="el-btn el-btn-4" href="{{ article.url | url }}">Read more</a>
                            </el-button>
                        </article>
                    </li>
                {% endfor %}
            </ul>
        </el-column>
        <el-column grid="row">
            <hr style="margin:72px 0; border:1px solid #fafafa;">
            {% include "forms/form-subscribe.njk" %}
        </el-column>
